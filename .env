# ROS domain for both services
ROS_DOMAIN_ID=0

# USB camera device; change to /dev/video1 if needed
UVC_DEVICE=/dev/video0

# Camera params
RGB_WIDTH=1920
RGB_HEIGHT=1080
RGB_FPS=30.0
RGB_PIXEL_FORMAT=mjpeg2rgb    # or yuyv2rgb if MJPEG fails
RGB_CAMERA_NAME=arducam_rgb
RGB_FRAME_ID=uvc_rgb
RGB_INFO_URL=file:///work/config/rgb_1920x1080.yaml

# ROS topics namespace (stable with your architecture)
RGB_NS=/sensors/rgb

# Also publish /sensors/rgb/image_raw/compressed
ENABLE_COMPRESSED=1

# Foxglove WS port
FOXGLOVE_PORT=8765
